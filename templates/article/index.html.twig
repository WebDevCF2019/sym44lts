{% extends 'bootstrap4Admin.html.twig' %}

{% block title %}{{ parent() }} | Accueil Admin{% endblock %}

{% block menuhaut %}
    <li class="nav-item">
        <a class="nav-link" href="{{ path('article_new')}}">Nouvel Article</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="{{ path("homepage")}}">Déconnexion</a>
    </li>
{% endblock %}

{% block content %}
<main role="main" class="flex-shrink-0">
    <div class="container">
    <h1>Admin | Tous les articles</h1>
        <a href="{{ path('article_new') }}">Ajouter un article</a>
    <table class="table">
        <thead>
            <tr>
                <th>Idarticle</th>
                <th>Titre</th>
                <th>Slug</th>
                <th>Texte</th>
                <th>Thedate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.idarticle }}</td>
                <td>{{ article.titre }}</td>
                <td>{{ article.slug }}</td>
                <td>{{ article.texte|u.truncate(120,'...') }}</td>
                <td>{{ article.thedate ? article.thedate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('article_show', {'idarticle': article.idarticle}) }}">Afficher</a>
                    <a href="{{ path('article_edit', {'idarticle': article.idarticle}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Pas encore d'articles</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('article_new') }}">Créer un article</a>
    </div>
</main>
{% endblock %}
