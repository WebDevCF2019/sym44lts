{% extends 'bootstrap4Admin.html.twig' %}

{% block title %}{{ parent() }} | Affiche article{% endblock %}

{% block menuhaut %}
    <li class="nav-item">
        <a class="nav-link" href="{{ path('article_new')}}">Nouvel Article</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="{{ path("homepage")}}">Déconnexion</a>
    </li>
{% endblock %}

{% block content %}
<main role="main" class="flex-shrink-0">
    <div class="container">
    <h1>Affichage de l'article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Idarticle</th>
                <td>{{ article.idarticle }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ article.titre }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ article.slug }}</td>
            </tr>
            <tr>
                <th>Texte</th>
                <td>{{ article.texte }}</td>
            </tr>
            <tr>
                <th>Thedate</th>
                <td>{{ article.thedate ? article.thedate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('article_index') }}">Retour à la liste</a>
<hr>
    <a href="{{ path('article_edit', {'idarticle': article.idarticle}) }}">modification de l'article</a>
<hr>
    {{ include('article/_delete_form.html.twig') }}
    </div>
</main>
{% endblock %}
